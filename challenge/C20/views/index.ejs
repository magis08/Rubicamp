<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>BREAD (Browse, Read, Edit, Add, Delete)</title>
</head>

<body>
  <div class="container">
    <h1>SQLite BREAD (Browse, Read, Edit, Add, Delete) with Pagination</h1>

    <!-- Form Pencarian -->
    <form method="get" action="/" class="search-form">
      <div class="inline-form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" placeholder="Insert your name">
      </div>
      <div class="inline-form-group">
        <label for="height">Height</label>
        <input type="number" name="height" id="height" placeholder="Insert your height">
      </div>
      <div class="inline-form-group">
        <label for="weight">Weight</label>
        <input type="number" name="weight" id="weight" placeholder="Insert your weight">
      </div>
      <div class="inline-form-group">
        <label>Birth Date</label>
        <input type="date" name="birthdateMin">
        <span class="range-separator">s.d.</span>
        <input type="date" name="birthdateMax">
      </div>
      <div class="inline-form-group">
        <label for="isMarried">Is Married</label>
        <select name="isMarried" id="isMarried">
          <option value="">-- select married status --</option>
          <option value="1">Yes</option>
          <option value="0">Not Yet</option>
        </select>
      </div>

      <div class="inline-form-group">
        <label>Operation</label>
        <div>
          <label>
            <input type="radio" name="operation" value="OR" checked> OR
          </label>
          <label>
            <input type="radio" name="operation" value="AND"> AND
          </label>
        </div>
      </div>

      <button type="submit">Search</button>
      <button type="button" onclick="resetSearch()">Reset</button>
    </form>

    <!-- Tabel Data -->
    <table>
      <colgroup>
        <col style="width: 5%;">
        <col style="width: 20%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 15%;">
        <col style="width: 10%;">
        <col style="width: 20%;">
      </colgroup>
      <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Birth Date</th>
        <th>Is Married</th>
        <th>actions</th>
      </tr>
      <% if (persons.length> 0) { %>
        <% persons.forEach((person, index)=> { %>
          <tr>
            <td>
              <%= offset + index + 1 %>
            </td>
            <td>
              <%= person.name %>
            </td>
            <td>
              <%= person.height %>
            </td>
            <td>
              <%= person.weight %>
            </td>
            <td>
              <%= person.birthdate %>
            </td>
            <td>
              <%= person.married ? 'Yes' : 'No' %>
            </td>
            <td>
              <!-- Tombol Update -->
              <form action="/edit/<%= person.id %>" method="GET" style="display: inline;">
                <button type="submit" style="color: white; background-color: green; border: none; padding: 5px 10px; cursor: pointer;">
                  Update
                </button>
              </form>

              <!-- Tombol Delete dengan Konfirmasi -->
              <form action="/delete/<%= person.id %>" method="GET" style="display: inline;"
                onsubmit="return confirm('Are you sure you want to delete this item?');">
                <button type="submit" style="color: white; background-color: red; border: none; padding: 5px 10px; cursor: pointer;">
                  Delete
              </button>
              </form>
            </td>

          </tr>
          <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7">No data available</td>
              </tr>
              <% } %>
    </table>
    <div class="pagination-container">
      <a href="/add" class="create-link">Add</a>

      <div class="pagination">
        <% if (totalItems> 0 && totalPages > 1) { %>
          <!-- Previous button -->
          <% if (currentPage> 1) { %>
            <a
              href="?<%= Object.keys(query).filter(key => key !== 'page').map(key => key + '=' + query[key]).join('&') %>&page=<%= currentPage - 1 %>">&laquo;</a>
            <% } %>

              <!-- First page -->
              <a class="<%= currentPage === 1 ? 'active' : '' %>"
                href="?<%= Object.keys(query).filter(key => key !== 'page').map(key => key + '=' + query[key]).join('&') %>&page=1">1</a>

              <!-- Ellipsis before current page range -->
              <% if (currentPage> 3) { %>
                <span class="disabled">...</span>
                <% } %>

                  <!-- Page range around current page -->
                  <% for (let i=Math.max(2, currentPage - 1); i <=Math.min(totalPages - 1, currentPage + 1); i++) { %>
                    <a class="<%= i === currentPage ? 'active' : '' %>"
                      href="?<%= Object.keys(query).filter(key => key !== 'page').map(key => key + '=' + query[key]).join('&') %>&page=<%= i %>">
                      <%= i %>
                    </a>
                    <% } %>

                      <!-- Ellipsis after current page range -->
                      <% if (currentPage < totalPages - 2) { %>
                        <span class="disabled">...</span>
                        <% } %>

                          <!-- Last page -->
                          <% if (totalPages> 1) { %>
                            <a class="<%= currentPage === totalPages ? 'active' : '' %>"
                              href="?<%= Object.keys(query).filter(key => key !== 'page').map(key => key + '=' + query[key]).join('&') %>&page=<%= totalPages %>">
                              <%= totalPages %>
                            </a>
                            <% } %>

                              <!-- Next button -->
                              <% if (currentPage < totalPages) { %>
                                <a
                                  href="?<%= Object.keys(query).filter(key => key !== 'page').map(key => key + '=' + query[key]).join('&') %>&page=<%= currentPage + 1 %>">&raquo;</a>
                                <% } %>
                                  <% } %>
      </div>
    </div>
  </div>
  <script>
    function resetSearch() {
      window.location.href = '/';
    }
  </script>
</body>

</html>