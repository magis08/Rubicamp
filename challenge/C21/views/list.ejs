<%- include('partials/header.ejs') %>
    <div class="card">
        <div class="card-header text-center">
            <h1>PostgreSQL Breads(Browse,Read,Edit,Add,Delete,Sort)</h1>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label for="nameTitle" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="title" class="form-control" id="nameTitle">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="deadline" class="col-sm-2 col-form-label">Deadline</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="deadline">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="complete" class="col-sm-2 col-form-label">Complete</label>
                    <div class="col-sm-10">
                        <select type="option" class="form-control" id="complete">
                            <option value="">-- select complete status --</option>
                        </select>
                    </div>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Operation</legend>
                    <div class="col-sm-10">
                        <div>
                            <label style="margin-right: 15px;">
                                <input type="radio" name="operation" name="Operation" id="option1" checked> OR
                            </label>
                            <label>
                                <input type="radio" name="operation" name="Operation" id="option1"> AND
                            </label>
                        </div>
                    </div>
        </fieldset>
        <div style="margin-bottom: 10px;">
            <button type="submit" class="btn btn-primary" style="margin-right: 8px;">Search</button>
            <button type="submit" class="btn btn-primary">Reset</button>
            </form>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">Complete</th>
                <th scope="col">Deadline</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index)=> {%>
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= item.title %>
                    </td>
                    <td>
                        <%= item.complete %>
                    </td>
                    <td>
                        <%= item.deadline %>
                    </td>
                    <td>
                        <%= item.actions %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <div class="card-footer">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

    </div>
    <a href="/add" class="btn btn-primary"> Add</a>
    </div>
    <%- include('partials/footer.ejs') %>